        <div id="rent-202" class="tab-pane fade in active">
          <h4>臨時性借用：</h4>
          <table class="table table-striped">
            <thead>
              <th>學期</th>
              <th>時段</th>
            </thead>
            <tbody>
              <% @rent_202.each do |r| %>
                <tr>
                  <td><%= r.semester.description %></td>
                  <td>
                    <% r.rent_times.each do |t| %>
                      <%= t.start.strftime('%Y / %m / %d %H:%M') %>
                       ～
                      <%= t.end.strftime('%Y / %m / %d %H:%M') %><br>
                    <% end %>
